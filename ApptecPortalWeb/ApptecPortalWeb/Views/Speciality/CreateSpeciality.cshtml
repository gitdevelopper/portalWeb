@{
    ViewBag.Title = "Especialidades";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="row flex-grow">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Especialidades</h4>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Nombre de la especialidad</label>
                                                        <input type="text" class="form-control" id="nombreEspecialidad" placeholder="Nombre" value="" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Institución</label>
                                                        <select class="form-control" id="institucionId" autocomplete="on"  required>
                                                            <option selected>Seleccionar</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2"></div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-2">
                                                </div>
                                                <div class="col-md-2">
                                                    <br><br>
                                                    <button type="button" id="saveSpeciality" class="btn btn-success mr-2">Guardar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
        <script type="text/javascript" src="~/Scripts/Platform/General/GetInstitucion.js"></script>
        <script type="text/javascript" src="~/Scripts/Platform/Speciality/CreateSpeciality.js"></script>



