@{
    ViewBag.Title = "Grupos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 d-flex align-items-stretch grid-margin">
                <div class="row flex-grow">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Grupos</h4>
                                <div class="card">
                                    <div class="card-body">
                                        <form id="form" method="post">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Nombre del grupo</label>
                                                        <input type="text" class="form-control" id="nombreGrupo" placeholder="Grupo" value="" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <br>
                                                        <button type="button" id="saveGroup" class="btn btn-success mr-2">Actualizar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
        <script>
            var dateuser = localStorage.getItem("keyuser");

        $(document).ready(function () {
            var accion;
            var error;
            var msj;

            id= @Request.QueryString["id"];
            var oModel = {
                "GroupId": id
            }
            $.ajax({
                "async": true,
                "crossDomain": true,
                "cache": false,
                "method": "POST",
                "url": "http://192.168.0.103:59538/Api/Group/ShowUpdate",
                "data": JSON.stringify(oModel),
                "contentType": "application/json",
            success: function (data) {
                var i;
                for (i = 0; i < data.length; i++) {
                    $("#nombreGrupo").val(data[i].nombre);
                }
                error = "Ninguno";
                msj = "Funcionamiento correcto";
                accion = "Obtencion de datos para la actualizacion de un grupo";
                Information(accion, error, msj);

            },
            error: function (jqXHR, textStatus, err) {
                console.log(textStatus);
                error = err + " " + textStatus + " " + jqXHR;
                msj = "Administrador revisa el funcionamiento del portal";
                accion = "Fallo obtencion de datos para actualizar un grupo";
                Information(accion, error, msj);
            }
            });
        });


        $('#saveGroup').click(function () {
            var accion;
            var error;
            var msj;

            var oModel = {
                "GroupId": id,
                "Nombre": $("#nombreGrupo").val(),
                "Users": dateuser
            }
            $.ajax({
                    "async": true,
                    "crossDomain": true,
                    "cache": false,
                    "method": "POST",
                    "url": "http://192.168.0.103:59538/Api/Group/Update",
                    "data": JSON.stringify(oModel),
                    "contentType": "application/json",
                success: function (data) {
                    error = "Ninguno";
                    msj = "Funcionamiento correcto";
                    accion = "Actualizacion de un grupo";
                    Information(accion, error, msj);

                    swal("Grupo actualizado", "El grupo se actualizo correctamente", "success")
                    window.location.href = "ShowGroup";
                    return false;

                },
                error: function (jqXHR, textStatus, err) {
                    swal("Existio un problema al actualizar");
                    error = err + " " + textStatus + " " + jqXHR;
                    msj = "Administrador revisa el funcionamiento del portal";
                    accion = "Fallo actualizacion de un grupo";
                    Information(accion, error, msj);
                    window.location.href = "ShowGroup";
                    return false;
                }
            });
        });


            function Information(accion, error, msj) {
                var oModel = {
                    "Accion": accion,
                    "Error": error,
                    "Msj": msj,
                "Users": dateuser
                }
                $.ajax({
                    "async": true,
                    "crossDomain": true,
                    "cache": false,
                    "method": "POST",
                    "url": "http://192.168.0.103:59538/Api/Binnacle/Info",
                    "data": JSON.stringify(oModel),
                    "contentType": "application/json"
                }).done(function (response) {
                    console.log(response);
                }).fail(function (jqXHR, textStatus, err) {
                    console.log(textStatus);
                });
            }


        </script>
