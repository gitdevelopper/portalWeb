@{
    ViewBag.Title = "Carreras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 d-flex align-items-stretch grid-margin">
                    <div class="row flex-grow">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Carreras</h4>
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Clave de la carrera</label>
                                                            <input type="text" class="form-control" id="claveCarrera" placeholder="Clave" value="" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Nombre de la carrera</label>
                                                            <input type="text" class="form-control" id="nombreCarrera" placeholder="Nombre" value="" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Institución</label>
                                                            <select class="form-control" id="institucionId" autocomplete="on" required>
                                                                <option selected>Seleccionar</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-2"></div>
                                                    <div class="col-md-2"></div>
                                                    <div class="col-md-2"></div>
                                                    <div class="col-md-2"></div>
                                                    <div class="col-md-2">
                                                    </div>
                                                    <div class="col-md-2">
                                                        <br><br>
                                                        <button type="button" id="SaveCareer" class="btn btn-success mr-2">Guardar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
            <script type="text/javascript" src="~/Scripts/Platform/General/GetInstitucion.js"></script>
            <script type="text/javascript" src="~/Scripts/Platform/Career/CreateCareer.js"></script>



